pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh "sudo apt install -y python3-pip"
                sh "pip install -r requirments.txt"
            }
        }
        stage('Dependencies'){
            steps{
                sh "pip install -r shop/not-application/requirements.txt"
            }
        }
        stage('Deploy'){
            steps{
                sh "python3 shop/not-application/app.py
            }
        }
    }
}