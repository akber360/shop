pipeline{
    agent any
    environments{
        SECRET_KEY=credentials('pass')
    }
    stages{
        stage('Build'){
            steps{
                sh "sudo apt install -y python3-pip"
                sh "export SECRET_KEY=${SECRET_KEY}"
                sh "env"
                
            }
        }
        stage('Dependencies'){
            steps{
                sh "pip install -r requirements.txt"
            }
        }
        stage('Deploy'){
            steps{
                sh "python3 not-application/app.py"
            }
        }
    }
}