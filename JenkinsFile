pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh "sudo apt install python3-pip"
                sh "pip install -r requirments.txt"
            }
        }
        stage('Dependencies'){
            steps{
                sh "pip install -r requirments.txt"
            }
        }
        stage('Deploy'){
            steps{
                sh "python3 app.py"
            }
        }
    }
}